<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spot_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_marker_info_window"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spot_info_title"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spot_info_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:textStyle="italic"
        android:maxLines="10"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/iv_info_navigation_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/background_circle_white"
        android:elevation="10dp"
        android:src="@drawable/ic_go" />


    </LinearLayout>
