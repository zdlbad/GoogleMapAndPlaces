        <!--android:layout_marginTop="15dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/place_info"-->
        <!--android:src="@drawable/ic_info"-->
        <!--/>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toilet_group"
        android:layout_below="@id/relLayout1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/toilet"
            android:src="@drawable/ic_toilet"/>

        <!---ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/toilet_caller"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/toilet"
            android:src="@drawable/ic_magnify"/-->
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parking_group"
        android:layout_below="@id/toilet_group">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/parking"
            android:src="@drawable/ic_parking"/>

        <!---ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/parking_caller"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/parking"
            android:src="@drawable/ic_magnify"/-->
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/building_group"
        android:layout_below="@id/parking_group">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:id="@+id/building"
        android:src="@drawable/ic_building"/>
    </RelativeLayout>

